{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "s3:GetBucketLocation",
                "s3:ListAllMyBuckets"
            ],
            "Resource": "*",
            "Effect": "Allow",
            "Sid": "NeededForBucketSelector"
        },
        {
            "Action": "s3:ListBucket",
            "Resource": "arn:aws:s3:::<bucket_name>",
            "Effect": "Allow",
            "Sid": "NeededForListingBackupBucket"
        },
        {
            "Action": [
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Resource": "arn:aws:s3:::<bucket_name>/<optional_path>/*",
            "Effect": "Allow",
            "Sid": "NeededForAccessingBackupBucket"
        },
        {
            "Condition": {
                "ForAllValues:StringEquals": {
                    "kms:ResourceAliases": "alias/<key_name>"
                }
            },
            "Action": [
                "kms:Decrypt",
                "kms:GenerateDataKey"
            ],
            "Resource": "*",
            "Effect": "Allow",
            "Sid": "NeededForBackupBucketKey"
        }
    ]
}